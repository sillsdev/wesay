<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
  <!-- didn't work
	  <FeatureRef Id ="ProductFeature">
	  <ComponentRef Id ="biatahWritingSystemPrefs"/>
	  <ComponentRef Id ="biatahWesayDir"/>
	  <ComponentRef Id ="biatahWordsCache"/>
	  <ComponentRef Id ="biatahIncrementalXmlBackup"/>
	</FeatureRef>
	-->

	<DirectoryRef Id="biatahSampleDir" >

	  <Component Id ="biatahShortcuts" Guid ="FB0973B3-8502-42ea-9B78-0879A3CAD40B">
		<Shortcut Id="RunBiatahShortcut"  Directory="WeSayShortcutDir" Name="Run Biatah Sample"
			Target="[!WeSay.App.exe]" Arguments ='"[!biatah.lift]"' WorkingDirectory="biatahWeSay" Icon ="SampleRunIcon" />

		<Shortcut Id="SetupBiatahShortcut"  Directory="WeSayShortcutDir" Name="Configure Biatah Sample"
				  Target="[!WeSayConfigurationTool]"  Arguments ='"[!biatah.WeSayConfig]"'
		   WorkingDirectory="biatahWeSay" Icon ="SampleSetupIcon" />
		<!-- this Registry entry is required because we have shortcuts that aren't 'advertised',
					  which we have because 'advertised shortcuts can't have targets. Don't as ME.
					  See: http://www.nabble.com/ICE38-and-ICE43-on-Shortcuts-t1409061.html -->
		<Registry Root="HKCU" Key="SOFTWARE\WeSay\Components\BiatahSamples" KeyPath="yes" />

	  </Component>

	  <Directory Id="BiatahCommon" Name="common">
		<Component Id="biatahWritingSystemPrefs" Guid="{DFC212BA-EBF6-41BD-A015-94BF95D3B27A}">
		  <File Id="writingSystemPrefs.xml" Name="writingSystemPrefs.xml" KeyPath="yes" Source="..\..\sampleprojects\biatah\common\writingSystemPrefs.xml" />
		</Component>
	  </Directory>
	  <Directory Id="biatahWeSay" Name="wesay">
		<Component Id="biatahWesayDir" Guid="{5008C03F-7946-4147-96B1-442AD4999FA9}">
		  <File Id="biatah.lift" Name="biatah.lift" KeyPath="yes" Source="..\..\sampleprojects\biatah\wesay\biatah.lift" />
		  <File Id="biatah.WeSayConfig" Name="biatah.WeSayConfig"  Source="..\..\sampleprojects\biatah\wesay\biatah.WeSayConfig" />
		</Component>
		<Directory Id="biatahWordsCacheDir" Name="Cache">
		  <Component Id="biatahWordsCache" Guid="{EF2EBD26-0A05-4DC1-8B74-C4EFDA1547F6}">
			<File Id="biatah.words" Name="biatah.words" Source="..\..\sampleprojects\biatah\wesay\cache\biatah.words" />
			<File Id="AddExamples.cache" Name="Add Examples.cache" KeyPath="yes" Source="..\..\sampleprojects\biatah\wesay\Cache\Add Examples.cache" />
			<File Id="AddMeanings.cache" Name="Add Meanings.cache" Source="..\..\sampleprojects\biatah\wesay\Cache\Add Meanings.cache" />
			<File Id="Dictionary.cache" Name="Dictionary.cache"  Source="..\..\sampleprojects\biatah\wesay\Cache\Dictionary.cache" />
			<File Id="LexEntrysortedbybth.cache" Name="LexEntry sorted by bth.cache"  Source="..\..\sampleprojects\biatah\wesay\Cache\LexEntry sorted by bth.cache" />
			<File Id="LexEntrysortedbybthqipa.cache" Name="LexEntry sorted by bth-fonipa.cache"  Source="..\..\sampleprojects\biatah\wesay\Cache\LexEntry sorted by bth-fonipa.cache" />
			<File Id="LexEntrysortedbyen.cache" Name="LexEntry sorted by en.cache"  Source="..\..\sampleprojects\biatah\wesay\Cache\LexEntry sorted by en.cache" />
			<File Id="WeSay.LexicalTools.MissingExampleSentenceFilterbth.cache" Name="WeSay.LexicalTools.MissingExampleSentenceFilterbth.cache" Source="..\..\sampleprojects\biatah\wesay\Cache\Missing ExampleSentence [bth] Filter.cache" />
			<File Id="WeSay.LexicalTools.MissingGlossFilteren.cache" Name="WeSay.LexicalTools.MissingGlossFilteren.cache" Source="..\..\sampleprojects\biatah\wesay\Cache\Missing SenseGloss [en] Filter.cache" />
		  </Component>
		</Directory>
	  </Directory>
	</DirectoryRef>
  </Fragment>
</Wix>